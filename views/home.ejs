<link rel="stylesheet" href="/static/styles.css" />
<%- include("partials/header"); -%>
<section class="py-5 text-center container">
  <div class="col-lg-6 col-md-8 mx-auto">
    <div class="row py-lg-5">
      <h1 class="fw-light">AeroAutoHub</h1>
      <p class="lead text-body-secondary"> <%= startingContent %> </p>
    </div>
  </div>
  
</section>

    <div class="album py-5 bg-body-tertiary">
      <div calss="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          <% cars.forEach(function(car){ %>
            <div class="col">
              <div class="card shadow">
                <div class="card-img-container" style="height: 225px; overflow: hidden; position: relative;">
                  <img 
                    id="car_img" 
                    src="<%= car.imgurl %>" 
                    alt="Car image" 
                    style="width: 100%; height: auto; min-height: 100%; position: absolute; top: 50%; transform: translateY(-50%);" 
                  />
                </div>

                <div class="card-body">
                  <h2><%=car.brand + " " + car.version + " " + car.year%></h2>
                  <p class="card-text">
                    <%="price:" + String(car.price)%>
                    <br/>
                    <%="Miles: " + String(car.mile)%>
                    <br/>
                    <%="GPS: " + (car.GPS? "Yes":"no")%>
                    <br/>
                    <%="Seats: " + car.seats%>
                  </p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-outline-secondary" onclick="location.href='/cars/<%=car._id%>'">View</button>
                    </div>
                  </div>
                </div>

              </div>
              
            </div>

          <% }) %>
          
        </div>
      </div>
    </div>



<%- include('chat') %>
<%- include("partials/footer"); -%>